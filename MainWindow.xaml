        xmlns:local="clr-namespace:Calculadora_ISR"
        mc:Ignorable="d"
        Title="Calculadora ISR" Height="255.982" Width="800">
    <Grid Background="Black" Margin="0,0,-6.4,-2.6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="547*"/>
            <ColumnDefinition Width="246*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="54*"/>
